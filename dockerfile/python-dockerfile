FROM tensorflow/tensorflow:latest-py3

ADD . /app/
ADD requirements.txt /app/
WORKDIR /app

RUN apt-get update \
    && apt-get clean \
    && apt-get update -qqq \
    && apt-get remove -y -q python3.6 \
    && apt-get install -y -q g++ python3.8 python3.8-dev libgl1 python3-pip libsm6 libxext6 libxrender-dev libmysqlclient-dev \
    && rm /usr/bin/python3 && ln -s python3.8 /usr/bin/python3 \
    && python3 -m pip install --upgrade pip \
    && pip install -r requirements.txt \
    && echo "export PYTHONPATH=\"${PYTHONPATH}:/app\"" >> ~/.bashrc

WORKDIR /app

CMD python manage.py runserver 0:8000
